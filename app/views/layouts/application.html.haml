!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}
    %meta{:charset => "utf-8"}
    %meta{:content => "width=device-width, initial-scale=1, shrink-to-fit=no", :name => "viewport"}
    %title= t("site_name")
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
    %script{crossorigin: "anonymous", src: "https://kit.fontawesome.com/d1995cff7d.js"}
    %script{src:"https://unpkg.com/infinite-scroll@3/dist/infinite-scroll.pkgd.min.js"}
  %body.bg-light
    = render "header"

    %main= yield

    = render "modals"

    %footer.my-5.pt-5.text-muted.text-center.text-small.border-top
